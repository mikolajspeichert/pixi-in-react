{
  "name": "pixi-in-react",
  "version": "0.0.7-alpha.2",
  "description": "PixiJS as React components",
  "author": "Mikolaj Speuchert",
  "license": "MIT",
  "repository": "github:mikolajspeichert/pixi-in-react",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src",
    "LICENSE"
  ],
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "performance-now": "^2.1.0",
    "react-reconciler": "^0.19.0-alpha.0",
    "tiny-invariant": "^1.0.3"
  },
  "peerDependencies": {
    "pixi.js": "^4.8.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.12",
    "@types/pixi.js": "^4.8.6",
    "@types/react": "^16.7.18",
    "@types/react-reconciler": "^0.16.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-canvas-mock": "^1.1.0",
    "lint-staged": "^8.1.0",
    "pixi.js": "^4.8.5",
    "prettier": "^1.15.3",
    "react": "^16.8.0-alpha.0",
    "react-dom": "^16.8.0-alpha.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-size-snapshot": "^0.7.0",
    "rollup-plugin-uglify": "^6.0.1",
    "rollup-plugin-visualizer": "^0.9.2",
    "ts-jest": "^23.10.5",
    "tsc-watch": "^1.0.31",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "tsc": "tsc",
    "start": "cp ./index.js ./dist/index.js && cross-env NODE_ENV=development rollup -w -c | tsc -w",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsc && rollup -c && rimraf compiled && cp ./index.js ./dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "coverageDirectory": "coverage",
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).ts?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "setupFiles": [
      "<rootDir>/test/setup.ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "verbose": false
  }
}
